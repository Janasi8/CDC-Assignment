class Solution {
public:
    int pivotIndex(vector<int>& arr) {
        int total = accumulate(arr.begin(), arr.end(), 0);
        int leftSum = 0;
        
        for (int i = 0; i < arr.size(); i++) {
            if (leftSum == total - leftSum - arr[i]) {
                return i;
            }
            leftSum += arr[i];
        }
        return -1;
    }
};
